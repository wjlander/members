# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=member_management
DB_USER=memberapp_user
DB_PASSWORD=your_secure_database_password_here

# Application Configuration
NODE_ENV=production
PORT=3000
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
SESSION_SECRET=your_session_secret_here_minimum_32_characters

# Domain Configuration
MAIN_DOMAIN=member.yourdomain.com
ADMIN_DOMAIN=admin.yourdomain.com

# Email Configuration (Resend)
RESEND_API_KEY=re_your_resend_api_key_here
FROM_EMAIL=noreply@yourdomain.com

# File Upload Configuration
UPLOAD_DIR=/var/lib/member-management/uploads
MAX_FILE_SIZE=10485760

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=/var/log/member-management

# Security Configuration
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=24h
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Development Configuration (uncomment for development)
# NODE_ENV=development
# LOG_LEVEL=debug
# MAIN_DOMAIN=localhost:3000
# ADMIN_DOMAIN=localhost:3000